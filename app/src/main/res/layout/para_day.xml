<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/monday_text_auditorium"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monday_text_discipline"
        android:layout_alignBottom="@+id/monday_text_time"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/monday_text_time"
        android:padding="4dp"
        android:text="Аудитория" />


    <TextView
        android:id="@+id/monday_text_time"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:padding="4dp"
        android:text="Время" />

    <TextView
        android:id="@+id/monday_text_discipline"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/monday_text_time"
        android:padding="4dp"
        android:text="Дисциплина" />

    <TextView
        android:id="@+id/monday_text_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/monday_text_discipline"
        android:padding="4dp"
        android:text="Преподаватель" />


</RelativeLayout>